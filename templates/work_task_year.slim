.task_year
	- @res.each do | k, v |
		- focus = v == Time.now.mon.to_s ? 'focus5' : ''
		.month class="#{focus}"
			label
				a href="" #{v} #{L[:month]}

css:
	.task_year .month {
		float: left;
		padding: 5px;
		margin: 3px;
		height: 90px;
		width: 31%;
		border: 1px solid #816F53;
	}
	.task_year .month a {
		color: black;
		text-decoration: none;
	}
	.task_year .month a:hover {
		color: black;
		text-decoration: underline;
	}
